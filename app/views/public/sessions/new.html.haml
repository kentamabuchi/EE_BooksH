.sign
  .sign__container
    .sign__contents

      .sign__header
        %h2.sign__headerText
          EE.Books ログイン
  
      .sign__form
  
        = form_with model: @user, url: user_session_path, id:"login_user", local: true do |f|
          .sign__formItems
            .sign__formItem
  
              = f.label :メールアドレス,class:"sign__formTag"
              %br/
              %p#error 
              = f.email_field :email, autofocus: true, autocomplete: "email", class:"sign__formTextBox formText", id:"loginEmail"
              %p.error
  
            .sign__formItem
              = f.label :パスワード,class:"sign__formTag"
              %br/
              = f.password_field :password, autocomplete: "current-password", class:"sign__formTextBox formText", id:"loginPass"
              %p.error
              = link_to "パスワードを忘れた場合", new_user_password_path, class:"sign__forgetPassword"
  
            - if devise_mapping.rememberable?
              .sign__formItem
                = f.check_box :remember_me
                = f.label :ログインしたままにする
  
            .sign__actions
              %button.sign__formBtn#signInBtn
                ログイン

= javascript_include_tag "signInForm"
