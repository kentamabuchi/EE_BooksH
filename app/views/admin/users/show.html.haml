.adminUserFrame
  .adminUserFrame__announce
    =link_to "ホーム", admin_violation_books_path, class: "adminUserFrame__announce__link"
    %p.adminUserFrame__announce__separate /
    =link_to "会員一覧", admin_users_path, class: "adminUserFrame__announce__link"
    %p.adminUserFrame__announce__separate /
    %p.adminUserFrame__announce__link 会員詳細

  .adminUser
    .adminUser__container
      .adminUser__action
        = link_to "編集", edit_admin_user_path(@user), class: "adminUser__btn"
      .adminUser__contents
        .adminUser__UserImage
          = attachment_image_tag @user, :image, :fill, 300, 300, fallback: "no_image.jpg",size: '300x300'
        .adminUser__table
          %table
            %tr
              %th.adminUser__thread
                %span.adminUser__tag 登録日
              %td.adminUser__date= @user.created_at.strftime('%Y年%m月%d日')
            %tr
              %th.adminUser__thread
                %span.adminUser__tag ニックネーム
              %td.adminUser__date= @user.nick_name
            %tr
              %th.adminUser__thread
                %span.adminUser__tag メールアドレス
              %td.adminUser__date= @user.email
            %tr
              %th.adminUser__thread
                %span.adminUser__tag ステータス
              %td.adminUser__date
                - if @user.is_active == true
                  有効
                - else
                  退会
